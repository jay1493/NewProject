<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGrey</item>
        <item name="colorPrimaryDark">@color/colorDarkGrey</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorLightBlack</item>
        <item name="android:navigationBarColor">@color/colorDarkGrey</item>
    </style>
    <style name="AppTheme.SplashTheme">
        <item name="colorPrimary">@color/colorGrey</item>
        <item name="colorPrimaryDark">@color/colorDarkGrey</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorLightBlack</item>
        <item name="android:windowBackground">@drawable/splash_drawable</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
    </style>
</resources>